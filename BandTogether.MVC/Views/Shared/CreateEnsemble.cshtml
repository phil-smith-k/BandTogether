@model BandTogether.Models.ResourceModels.EnsembleResourceModels.EnsembleCreate

@{
    ViewBag.Title = "CreateEnsemble";
}
@using (Html.BeginForm("CreateEnsemble", "Resource", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Title" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="">
                @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", placeholder = "Description" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="">
                @Html.EnumDropDownListFor(model => model.Ensemble, "-- Select An Ensemble", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Ensemble, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="">
                @Html.EnumDropDownListFor(model => model.Skill, "-- Select A Skill", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Skill, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GradeLevel, htmlAttributes: new { @class = "control-label ml-5" })
            <div class="">
                @Html.DropDownListFor(m => m.GradeLevel, Enumerable.Range(4, 9).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GradeLevel, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group ml-5">
            <div class="custom-control custom-checkbox">
                @Html.EditorFor(model => model.EnsembleIsDownloadable, new { htmlAttributes = new { @class = "custom-control-input ml-2" } })
                @Html.LabelFor(model => model.EnsembleIsDownloadable, htmlAttributes: new { @class = "custom-control-label" })
                @Html.ValidationMessageFor(model => model.EnsembleIsDownloadable, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ml-5">
            <div class="custom-control custom-checkbox">
                @Html.EditorFor(model => model.EnsembleIsPublic, new { htmlAttributes = new { @class = "custom-control-input" } })
                @Html.LabelFor(model => model.EnsembleIsPublic, htmlAttributes: new { @class = "custom-control-label" })
                @Html.ValidationMessageFor(model => model.EnsembleIsPublic, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="">
                <label for="EnsembleFile" class="btn unfollow-btn mt-3 ml-4 mb-3" style="display: block;">
                    Browse
                </label>
                <input type="file" id="EnsembleFile" name="File" value="File" />
                @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="">
                <input type="submit" value="Upload" class="btn follow-btn float-right" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

