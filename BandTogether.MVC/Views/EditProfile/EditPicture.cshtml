@model BandTogether.Models.EditProfileModels.EditProfilePicture

@{
    ViewBag.Title = "EditPicture";
}

<h2>EditPicture</h2>


@using (Html.BeginForm("EditPicture", "EditProfile", FormMethod.Post, new { enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>EditProfilePicture</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="file" id="image" name="image" value="Upload Image" />
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
