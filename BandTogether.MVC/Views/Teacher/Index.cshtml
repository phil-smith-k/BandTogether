@model IEnumerable<BandTogether.Models.TeacherModels.TeacherListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Find Teachers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeacherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FollowerCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResourceCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(@Html.DisplayFor(modelItem => item.TeacherName).ToHtmlString(), "Detail", "Teacher", new { id = item.TeacherId }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FollowerCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ResourceCount)
        </td>
    </tr>
}

</table>
